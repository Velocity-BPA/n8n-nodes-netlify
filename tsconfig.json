{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2019",
		"lib": ["ES2019"],
		"declaration": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"outDir": "./dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"n8n-workflow": ["node_modules/n8n-workflow"]
		}
	},
	"include": [
		"credentials/**/*.ts",
		"nodes/**/*.ts"
	],
	"exclude": [
		"node_modules/**",
		"dist/**",
		"test/**"
	]
}
